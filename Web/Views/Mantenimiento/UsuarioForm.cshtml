@model Web.Models.UsuarioEditar
@{
    ViewData["Title"] = Model.Id == 0 ? "Crear usuario" : "Editar usuario";
    var supervisores = ViewBag.Supervisores as List<Web.Models.UsuarioDto> ?? new();
}

