<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="@(Model.Id == 0 ? "CrearUsuario" : "EditarUsuario")" asp-controller="Mantenimiento">

    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }

    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rol" class="form-label">Rol</label>
        <select asp-for="Rol" class="form-select">
            <option value="">-- Seleccione --</option>
            <option value="Administrador">Administrador</option>
            <option value="Supervisor">Supervisor</option>
            <option value="Tecnico">Técnico</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Contrasena" class="form-label">
            @((Model.Id == 0) ? "Contraseña" : "Contraseña (dejar en blanco para no cambiar)")
        </label>
        <input asp-for="Contrasena" type="password" class="form-control" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IdSupervisor" class="form-label">Supervisor (para técnicos)</label>
        <select asp-for="IdSupervisor" class="form-select">
            <option value="">-- Sin supervisor --</option>
            @foreach (var s in supervisores)
            {
                <option value="@s.Id">@s.Nombre (@s.Correo)</option>
            }
        </select>
        <span class="form-text">
            Este campo se usa principalmente cuando el rol es <strong>Técnico</strong>.
        </span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Usuarios" class="btn btn-outline-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}