<div class="row justify-content-center mt-4">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="alert alert-danger">
            <h4 class="alert-heading">@Model.Titulo</h4>
            <p>@Model.Mensaje</p>

            @if (!string.IsNullOrWhiteSpace(Model.DetalleTecnico))
            {
                <hr />
                <p class="mb-0">
                    <small>@Model.DetalleTecnico</small>
                </p>
            }
        </div>

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            Volver al inicio
        </a>
    </div>
</div>